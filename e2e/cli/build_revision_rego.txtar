exec $OPACTL build --config config.d/bundle.yml --data-dir tmp
stderr '^1/1 bundles built and pushed successfully$'
! stdout .

exec tar xf bundles/hello-world/bundle.tar.gz /.manifest
exec cat .manifest
stdout 'bundle-[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}'
stdout '"roots":\["rules"\]'
stdout '"rego_version":0'

-- files/sources/hello-world/rules.rego --
package rules
import rego.v1
result if input.yay
-- config.d/bundle.yml --
bundles:
  hello-world:
    revision: '$"bundle-{uuid.rfc4122("my-bundle")}"'
    object_storage:
      filesystem:
        path: bundles/hello-world/bundle.tar.gz
    requirements:
    - source: dir-paths
sources:
  dir-paths:
    directory: files/sources/hello-world
    paths:
    - rules.rego
